# UltraCore Configuration - TuringDynamics
# ⚠️ Copy to .env and add real values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ultracore

# Event Store
ULTRAPLATFORM_URL=http://localhost:8001
EVENT_STORE_URL=postgresql://postgres:password@localhost:5432/event_store

# Message Broker
KAFKA_URL=localhost:9092

# Cache
REDIS_URL=redis://localhost:6379

# AI
ANTHROPIC_API_KEY=your_key_here
AI_MODEL=claude-sonnet-4-20250514

# API
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=generate_secure_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
