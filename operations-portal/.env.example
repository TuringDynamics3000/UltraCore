# UltraCore Operations Portal - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/ultracore_operations

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Secret key for JWT token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-change-this-in-production

# ============================================================================
# AI / LLM
# ============================================================================
# OpenAI API key for Larry AI assistant
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================================================
# APPLICATION
# ============================================================================
# Application title displayed in UI
VITE_APP_TITLE=UltraCore Operations Portal

# Application logo (path to logo file in public folder)
VITE_APP_LOGO=/logo.svg

# Application ID (can be any unique identifier)
VITE_APP_ID=ultracore-operations-portal

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
# Umami analytics endpoint (leave empty to disable)
VITE_ANALYTICS_ENDPOINT=

# Umami website ID (leave empty to disable)
VITE_ANALYTICS_WEBSITE_ID=

# ============================================================================
# EXTERNAL APIS (Optional)
# ============================================================================
# Yahoo Finance API (for market data enrichment)
# Get free API key at: https://www.yahoofinanceapi.com/
YAHOO_FINANCE_API_KEY=

# Fiscal.ai API (for company financials)
# Get API key at: https://fiscal.ai/
FISCAL_API_KEY=

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Node environment
NODE_ENV=development

# Server ports
PORT=3001
VITE_PORT=3001
